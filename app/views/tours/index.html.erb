<h1> All tours </h1>
<% @tours.each do |tour|%>
  <div class="jumbotron">
  <p>
  Tour name: <%= tour.name %>
  </p>
  <p>
  Description: <%= tour.description %>
  </p>
  Language: <%= tour.language %>
  <p>
  <%= image_tag tour.image, width: 200 %>
  <%= link_to "edit", edit_tour_path(tour.id), class: "btn btn-info" %>
  <%= link_to "delete", tour_path(tour.id), method: :delete, class: "btn btn-danger" %>
  </p>
  </div>
<% end %>
<%= link_to 'Back', root_path %>
