<div class="text-center">
  <h2> Your bookings details</h2>
</div>

<% @bookings.each do |booking|%>
  <div class="col-sm-5 portfolio-item text-left container well booking-box col-sm-push-1">
    <p>Booking id: <%= booking.id%></p>
    <p>Tour name: <%= booking.tour.name%>
    <%= link_to "...details", tour_path(booking.tour_id) %>
    </p>
    <p>Date: <%= booking.start_date %></p>
    <p>Start Time: <%= booking.start_time.strftime("%I:%M%p") %></p>
    <p>Duration: <%= booking.tour.duration %> minutes</p>
    <p>People: <%= booking.party_of %></p>
    <p>Total Amount: HK$ <%= number_with_delimiter(booking.get_price, :delimiter => ',') %></p>
    <p class="text-center"><%= link_to "Edit booking", edit_booking_path(booking.id) %></p>
  </div>
<% end %>

