<div class="lp-main text-center">
  <div class="lp-main-content col-xs-10 col-xs-push-1 text-center">
      <h1>Experience Hong Kong!</h1>
      <p>Book your private tour in HK.</p>
  </div>
  <div class="lp-filter text-center col-xs-12">
    <%= form_tag(tours_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "What tour are you looking for? e.g. flower" %>
      <button class="btn btn-group btn-default" type="submit"> Search
      </button>
    <% end %>
  </div>
</div>
<section class="intro">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 lp-div">
        <h3 class="section-heading">How it works</h3>
        <hr class="star-primary">
        </hr>
        <p class="text-light"> Book here. We process your booking in 24 hours. You will get an e-mail and we will come back to you.</p>
      </div>
    </div>
  </div>
</section>
