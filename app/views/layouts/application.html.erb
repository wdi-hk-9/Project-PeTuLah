<!DOCTYPE html>
<html>
  <head>
    <title>ProjectPetulah</title>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Rye', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'petu-favi.ico', rel: "shortcut icon" %>
  </head>
  <body>

      <div class="col-xs-12 lp-div">
        <%= render "layouts/navbar" %>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </div>

  </body>
</html>
